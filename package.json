{
	"private": true,
	"name": "4k-demo-oven",
	"version": "1.3.1",
	"description": "Demo framework.",
	"scripts": {
		"build": "node scripts/build.js",
		"clean": "node scripts/clean.js",
		"capture": "node scripts/capture.js",
		"watch": "nodemon -e * -w demo -w engine -w scripts scripts/build.js -n"
	},
	"dependencies": {
		"fs-extra": "^8.1.0",
		"glsl-unit": "^0.0.7",
		"nconf": "^0.10.0",
		"nconf-yaml": "^1.0.2",
		"node-notifier": "^5.4.0",
		"nodemon": "^1.19.1",
		"yargs": "^13.3.0"
	},
	"devDependencies": {
		"eslint": "^6.1.0",
		"husky": "^3.0.1",
		"lint-staged": "^9.2.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
